	    <script type="text/javascript">
	    	var PAGE_SIZE 	= 13;
	    	var pageNum 	= 1;
	    	var totalPage 	= -1;
	    	var description = null;
	    	var survey  	= null;	
	    	var images  	= null;
	    	var heatmap 	= null;
	    	var loadComplete = 0;
	    	var progress 	= 0;
	    	var logs = [];
	    	$(document).ready(function(){
	    		Initialize();
			});
	    	/*
